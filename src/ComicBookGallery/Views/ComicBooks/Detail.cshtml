@model ComicBookGallery.Models.ComicBook
@using ComicBookGallery.Models

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = Model.DisplayText;
}
 
<div>
    <h1>@Model.SeriesTitle</h1>
    <h2>Issue : #@Model.IssueNumber</h2>
    <h5>Description : </h5>
    <div>
        @Html.Raw(Model.DescriptionHtml)
    </div>
        
    <div>
        @if(Artist.Total > 0)
        { 
            <h5>Artists : </h5>
            <ul>
            @foreach(Artist artist in Model.Artists)
            {
                <li>@artist.Role : @artist.Name</li>
            }
            </ul>
        }     
    </div>
</div>
